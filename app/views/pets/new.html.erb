
<div class="container">
  <div class="col-6 mx-auto">
    
    <%= simple_form_for [@user, @pet] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :pet_type %>
            <%= f.input :breed %>
            <%= f.input :image %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Add Pet", class: "btn btn-primary" %>
          </div>
        <% end %>
    
  </div>
</div>